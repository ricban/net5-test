<div class="vw-100 vh-100 d-flex justify-content-center align-items-center">
    <div class="alert alert-danger shadow w-75 p-5">
        <h1 class="text-center">
            <Icon Name="bug_report"></Icon>
        </h1>
        <p class="my-3">@((MarkupString)Message)</p>
        <div class="text-center">
            <button type="button" class="btn btn-danger" @onclick="OnContinueCallback">CONTINUE</button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Message { get; set; } = default!;

    [Parameter]
    public EventCallback OnContinueCallback { get; set; }
}