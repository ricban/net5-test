<div class="@("btn-group".Merge(Class))" role="group" aria-label="Basic radio toggle button group">
    @foreach (var label in Labels.Split(";", StringSplitOptions.RemoveEmptyEntries))
    {
        var id = $"{Name}_{label.Replace(" ", "")}";

        <input type="radio" class="btn-check" name="@Name" id="@id" @onchange="OnChangeCallback" autocomplete="off" checked="@label.Equals(Active)">
        <label class="btn @Type" for="@id">@label</label>
    }
</div>

@code {
    [Parameter]
    public string Name { get; set; } = default!;

    [Parameter]
    public string Type { get; set; } = default!;

    [Parameter]
    public string Class { get; set; } = default!;

    [Parameter]
    public string Labels { get; set; } = "";

    [Parameter]
    public string Active { get; set; } = default!;

    [Parameter]
    public EventCallback OnChangeCallback { get; set; }
}
